#!/bin/bash


function log(){
  echo "`date -Iseconds`: ${1}" >> $LOG_SNAP_COMMON
}

while true;
do
  sleep 5
  #UNMOUNT is touched on USB unmount
  ${SNAP}/usr/bin/inotifywait -e open ${UNMOUNT}

  #MNT is the partition of the mountedd USB drive
  MNT=`cat ${UNMOUNT}`

  MSG="Mount signal file ${MOUNT} touched. partition is ${MNT}."
  log "$MSG"
done
