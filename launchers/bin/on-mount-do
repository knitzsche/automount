#!/bin/bash

function log(){
  echo -e "`date -Iseconds:` ${1}" >> $LOG_SNAP_COMMON
}

while true;
do
  sleep 5
  #MOUNT is touched on automount
  ${SNAP}/usr/bin/inotifywait -e open ${MOUNT}

  #MNT is the mountpoint of the USB drive
  MNT=`cat ${MOUNT}`

  MSG="Mount signal file ${MOUNT} touched. Mountpoint is ${MNT}."
  log "$MSG"

done
